<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp"
    android:layout_gravity="center"
    android:background="@android:color/white"
    android:layout_height="wrap_content">
    <TextView
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:text="Bạn có chăc chắn muốn xóa món ăn này không?"
        android:gravity="center"
        android:textSize="22dp"
        android:layout_marginTop="20dp"
        android:textStyle="italic"
        android:id="@+id/dialogDeleteTxtTitle"
        android:textColor="#ff00"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <Button
        android:text="Yes"
        android:textAllCaps="false"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="30dp"
        android:id="@+id/dialogDeleteBtnYes"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toBottomOf="@id/dialogDeleteTxtTitle"
        android:layout_width="100dp"
        android:layout_height="wrap_content"/>
    <Button
        app:layout_constraintTop_toBottomOf="@id/dialogDeleteTxtTitle"
        app:layout_constraintLeft_toRightOf="@id/dialogDeleteBtnYes"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="30dp"
        android:layout_marginStart="30dp"
        android:text="No"
        android:textSize="20dp"
        android:id="@+id/dialogDeleteBtnNo"
        android:textAllCaps="false"
        android:layout_marginEnd="20dp"
        android:layout_width="100dp"
        android:layout_height="wrap_content"/>
</androidx.constraintlayout.widget.ConstraintLayout>